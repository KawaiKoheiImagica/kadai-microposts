<% if current_user.like?(micro) %>
  <%= form_for(current_user.favorites.find_by(micropost_id: micro.id), html: { method: :delete }) do |f| %>
    <%= hidden_field_tag :micropost_id, micro.id %>
    <%= f.submit 'Unlike', class: 'btn btn-danger btn-xs' %>
  <% end %>
<% else %>
  <%= form_for(current_user.favorites.build) do |f| %>
    <%= hidden_field_tag :micropost_id, micro.id %>
    <%= f.submit 'Like', class: 'btn btn-primary btn-xs' %>
  <% end %>
<% end %>